#!/bin/bash

# --- 基础配置 ---
USER_NAME="tujiaojie"
REPO_NAME="my-serv00"
WORKDIR="$HOME/mynode"
SB_BIN="$WORKDIR/sing-box"
CONFIG="$WORKDIR/config.json"
RAW_URL="https://raw.githubusercontent.com/$USER_NAME/$REPO_NAME/main"

# 颜色定义
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# --- 核心程序下载 ---
install_core() {
    if [ ! -f "$SB_BIN" ]; then
        echo -e "${YELLOW}正在通过镜像加速下载核心程序...${NC}"
        mkdir -p $WORKDIR && cd $WORKDIR
        wget https://ghproxy.net/https://github.com/SagerNet/sing-box/releases/download/v1.8.5/sing-box-1.8.5-freebsd-amd64.tar.gz
        tar -zxvf sing-box-1.8.5-freebsd-amd64.tar.gz
        mv sing-box-1.8.5-freebsd-amd64/sing-box .
        chmod +x sing-box
        rm -rf sing-box-1.8.5-freebsd-amd64*
    fi
}

# --- 同步配置 ---
sync_config() {
    echo -e "${YELLOW}正在同步 GitHub 仓库配置...${NC}"
    mkdir -p $WORKDIR
    wget -O $CONFIG "$RAW_URL/config.json"
    if [ $? -ne 0 ]; then
        echo -e "${RED}❌ 同步失败，请检查仓库配置！${NC}"
    else
        echo -e "${GREEN}✅ 配置已同步成功！${NC}"
    fi
}

# --- 菜单界面 ---
show_menu() {
    clear
    echo -e "${GREEN}======================================${NC}"
    echo -e "${YELLOW}    tujiaojie 的 Serv00 快捷工具       ${NC}"
    echo -e "${GREEN}======================================${NC}"
    echo -e "  1. 启动/重启 节点 (自动同步配置)"
    echo -e "  2. 查看 节点分享链接"
    echo -e "  3. 停止 代理服务"
    echo -e "  4. 卸载 代理服务"
    echo -e "  0. 退出脚本"
    echo -e "${GREEN}======================================${NC}"
    read -p "请输入选项: " choice

    case $choice in
        1) install_core; sync_config; pkill -9 sing-box; cd $WORKDIR; nohup ./sing-box run -c config.json > /dev/null 2>&1 & echo -e "${GREEN}✅ 服务已在后台启动！${NC}"; sleep 2; show_menu ;;
        2) 
            [ ! -f "$CONFIG" ] && echo "请先选择 1 启动节点" && sleep 2 && show_menu
            PORT=$(grep 'listen_port' $CONFIG | tr -cd '0-9')
            UUID=$(grep 'uuid' $CONFIG | awk -F'"' '{print $4}')
            IP=$(curl -s ipv4.icanhazip.com)
            PATH_WS=$(grep 'path' $CONFIG | awk -F'"' '{print $4}')
            echo -e "\n${YELLOW}你的 VLESS 分享链接:${NC}"
            echo -e "${GREEN}vless://$UUID@$IP:$PORT?encryption=none&security=none&type=ws&path=$PATH_WS#Serv00_tujiaojie${NC}"
            echo ""
            read -p "按回车键返回菜单..." ; show_menu ;;
        3) pkill -9 sing-box; echo -e "${RED}服务已停止。${NC}"; sleep 1; show_menu ;;
        4) pkill -9 sing-box; rm -rf $WORKDIR; echo -e "${RED}已彻底卸载。${NC}"; exit 0 ;;
        0) exit 0 ;;
        *) show_menu ;;
    esac
}

show_menu
