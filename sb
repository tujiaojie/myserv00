#!/bin/bash

USER_NAME="tujiaojie"
REPO_NAME="myserv00"
WORKDIR="$HOME/mynode"
SB_BIN="$WORKDIR/sing-box"
CONFIG="$WORKDIR/config.json"
RAW_URL="https://raw.githubusercontent.com/$USER_NAME/$REPO_NAME/main"

# åŸºç¡€é¢œè‰²
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# å®‰è£…æ ¸å¿ƒ (FreeBSD ä¸“ç”¨)
install_core() {
    if [ ! -f "$SB_BIN" ]; then
        echo -e "${YELLOW}æ­£åœ¨è·å–æ ¸å¿ƒ...${NC}"
        mkdir -p $WORKDIR && cd $WORKDIR
        wget https://mirror.ghproxy.com/https://github.com/SagerNet/sing-box/releases/download/v1.10.1/sing-box-1.10.1-freebsd-amd64.tar.gz
        tar -zxvf sing-box-1.10.1-freebsd-amd64.tar.gz
        cp sing-box-*/sing-box . && chmod +x sing-box
        rm -rf sing-box-1.10.1-freebsd-amd64*
    fi
}

show_menu() {
    clear
    echo -e "${GREEN}======================================${NC}"
    echo -e "${YELLOW}    tujiaojie ä¸“å± Serv00 èŠ‚ç‚¹ç®¡ç†    ${NC}"
    echo -e "${GREEN}======================================${NC}"
    echo -e "  1. å¯åŠ¨/é‡å¯ èŠ‚ç‚¹"
    echo -e "  2. æå– VLESS åˆ†äº«é“¾æ¥"
    echo -e "  3. åœæ­¢ èŠ‚ç‚¹"
    echo -e "  0. é€€å‡º"
    echo -e "${GREEN}======================================${NC}"
    read -p "é€‰æ‹©: " choice

    case $choice in
        1)
            install_core
            wget -q -O $CONFIG "$RAW_URL/config.json"
            pkill -9 sing-box
            cd $WORKDIR && nohup ./sing-box run -c config.json > /dev/null 2>&1 & 
            echo -e "${GREEN}ğŸš€ èŠ‚ç‚¹å¯åŠ¨æˆåŠŸï¼${NC}"
            sleep 2; show_menu ;;
        2)
            if [ -f "$CONFIG" ]; then
                PORT=$(grep -oE '"listen_port": [0-9]+' $CONFIG | awk '{print $2}')
                # å¤šé‡æŠ“å–é€»è¾‘ï¼šå…ˆæ‰¾ idï¼Œå†æ‰¾ uuidï¼Œå¦‚æœéƒ½æ‰¾ä¸åˆ°ï¼Œç›´æ¥å¼ºåˆ¶èµ‹å€¼
                MY_UUID=$(grep -oE '"(id|uuid)": "[^"]+"' $CONFIG | head -1 | awk -F'"' '{print $4}')
                if [ -z "$MY_UUID" ]; then MY_UUID="59fbd43f-76d8-41eb-8922-4caf50408c65"; fi
                
                MY_PATH=$(grep -oE '"path": "[^"]+"' $CONFIG | awk -F'"' '{print $4}')
                if [ -z "$MY_PATH" ]; then MY_PATH="/chat"; fi
                
                IP=$(curl -s ipv4.icanhazip.com)
                echo -e "\n${YELLOW}æ‚¨çš„èŠ‚ç‚¹åˆ†äº«é“¾æ¥ (è¯·å…¨é€‰å¤åˆ¶):${NC}"
                echo -e "${GREEN}vless://$MY_UUID@$IP:$PORT?encryption=none&security=none&type=ws&path=$MY_PATH#Serv00_Tujiaojie${NC}\n"
            else
                echo -e "${RED}è¯·å…ˆæ‰§è¡Œé€‰é¡¹ 1${NC}"
            fi
            read -p "å›è½¦è¿”å›..." ; show_menu ;;
        3) pkill -9 sing-box; echo -e "${RED}å·²åœæ­¢${NC}"; sleep 1; show_menu ;;
        0) exit 0 ;;
        *) show_menu ;;
    esac
}

show_menu
